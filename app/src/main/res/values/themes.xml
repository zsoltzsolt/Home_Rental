<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeRental" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WhiteButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="GreyButton">
        <item name="backgroundTint">@color/lightGrey</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="startIconTint">@color/purple_500</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
    </style>


    <style name="Theme.HomeRental.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HomeRental.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HomeRental.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>