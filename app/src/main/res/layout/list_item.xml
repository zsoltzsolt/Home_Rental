<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="20dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:textAppearance="?attr/textAppearanceSubtitle1"
    android:outlineSpotShadowColor="@color/purple_500"
    app:cardCornerRadius="10dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/property1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="223dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/image1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/anouncement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/purple_500"
                android:text="Apartament de inchiriat"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/anouncement_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pret: 200 lei/luna"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/DarkGrey"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="15dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_place_24"
                    app:tint="@color/purple_500"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:id="@+id/anouncement_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugoj, Timis"
                    android:textSize="10sp"
                    android:layout_marginTop="50dp"
                    />

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>